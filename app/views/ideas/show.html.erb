
<div class="row">
  <div class="col-md-12">
    <p><b>タイトル: </b><%= @idea.name %></p>
    <p><b>内容: </b><%= @idea.description %></p>
    <p>
      <%= link_to '編集', edit_idea_path(@idea) %> |
      <%= link_to '削除', @idea, data: { confirm: '本当に削除しますか？' }, method: :delete %> |
      <%= link_to '戻る', ideas_path %>
    </p>
  </div>
  <div class="col-md-12">
    <%= image_tag(@idea.picture_url, width: '100%') if @idea.picture.present? %>
  </div>
</div>
